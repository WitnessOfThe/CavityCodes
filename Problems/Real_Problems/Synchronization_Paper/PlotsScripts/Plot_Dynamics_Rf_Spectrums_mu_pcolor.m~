function  Plot_Dynamics_Rf_Spectrums_mu_pcolor(CW,Temp,ind_t,k)

        N_t = size(ind_t,2);
   
        f = [0:N_t/2-1,-N_t/2:-1]/( Temp.Sol.t(ind_t(end)) - Temp.Sol.t(ind_t(1)) )*Temp.Eq.norm/1E9;
    
        psi_hat = zeros(N_t,size(k,2));
        for i = 1:size(k,2)
            
            ind = find(Temp.Space.k == k(i));
            k_vector(i) =  Temp.Space.k(Temp.Space.k == k(i));
            Temp_Psi = ;
            if max(10*log10(abs(ifft(Temp.Sol.Psi(ind_t,ind))*N_t).^2*2*pi )) < -80
            Temp_Psi(:) = -100;    
            Temp_Psi  = Temp_Psi/max(abs(Temp_Psi));
            psi_hat(:,i)     = fftshift(abs(Temp_Psi));         
        
        end        
        
        t_pl = proPlot(k_vector,fftshift(f),Psi_hat),'PlotType','pcolor','ColorMap', 'hot');
        
%%


        t_pl = t_pl.changeAxisOptions('ColorMap', 'hot','CAxis', [-60,10],'XLabelText','$\mu$',...
                             'YLabelText','$<\partial\phi_\mu>$ (GHz)',...  
                             'FontSize',13,'XLim',[-15,15],'YLim',[-5,5]);
                         
%%
    figure('Name','Nonlinear Dispersion');
    t_pl.plotData
end
